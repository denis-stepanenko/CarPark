@page
@model CarPark.Pages.Drivers.CreateModel
@{
}

<form method="post">
    <div class="form-group">
        <label asp-for="Item.Name">Name</label>
        <input type="text" class="form-control @(Model.ModelState.IsValid ? "" : "is-invalid")" asp-for="Item.Name">
        <div class="invalid-feedback" style="display:block;">
            <span asp-validation-for="Item.Name"></span>
        </div>
    </div>

    <button type="submit" class="btn btn-success">Add</button>
    <a class="btn btn-light" asp-page="Index">Cancel</a>
</form>